  <style>
    :root {
      --bg-color: #181818;
      --text-color: #fff;
      --accent-color: #00ff00;
      --card-bg: #222;
    }

    body {
      font-family: 'Courier New', monospace;
      background-color: var(--bg-color);
      color: var(--text-color);
      margin: 0;
      padding: 20px;
      line-height: 1.6;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
    }

    header {
      display: flex;
      align-items: center;
      margin-bottom: 40px;
    }

    .profile-img {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 30px;
      border: 2px solid var(--accent-color);
    }

    h1,
    h2 {
      margin: 0;
      color: var(--accent-color);
      text-shadow: 0 0 5px var(--accent-color);
    }

    p {
      font-size: 18px;
    }

    .location {
      display: flex;
      align-items: center;
      justify-content: left;
      gap: 10px;
    }

    .email {
      background-color: #4caf50;
      border-radius: 25px;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      justify-content: left;
      gap: 10px;
    }

    .social-links {
      display: flex;
      justify-content: left;
      gap: 15px;
      margin-top: 15px;
    }

    .social-links a {
      color: var(--accent-color);
      text-decoration: none;
      font-size: 1.3em;
    }

    section {
      margin-bottom: 40px;
      background-color: rgba(0, 255, 0, 0.05);
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 255, 0, 0.1);
    }

    footer {
      margin-top: 30px;
      padding-top: 20px;
      border-top: 1px solid #0f0;
      display: flex;
      justify-content: space-between;
    }

    .technologies {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .tech-item {
      background-color: var(--card-bg);
      color: var(--accent-color);
      padding: 5px 10px;
      border-radius: 5px;
      display: flex;
      align-items: center;
      gap: 5px;
      font-size: 0.9em;
    }

    .experience-item,
    .education-item {
      background-color: var(--card-bg);
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 15px;
    }

    .projects {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .project-card {
      background-color: var(--card-bg);
      border-radius: 5px;
      overflow: hidden;
      transition: transform 0.3s ease;
    }

    .project-card:hover {
      transform: translateY(-5px);
    }

    .project-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .project-info {
      padding: 15px;
    }

    .project-links {
      display: flex;
      gap: 10px;
    }

    .project-links a {
      color: var(--accent-color);
      text-decoration: none;
    }

    .extra-section {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }

    .extra-item img {
      width: 100%;
      height: auto;
      border-radius: 5px;
    }

    .extra-item img {
      width: 200px;
      height: 120px;
      object-fit: cover;
      border-radius: 5px;
      transition: transform 0.3s ease;
    }

    .extra-item img:hover {
      transform: scale(1.05);
    }

    .bi {
      font-size: 1.2em;
    }

    .email-button {
      display: inline-flex;
      align-items: center;
      padding: 1px 12px;
      border: 1px solid var(--accent-color);
      /* Color verde del botón */
      border-radius: 25px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .email-button:hover {
      background-color: #45a049;
      color: white;
      /* Cambio de color al pasar el cursor */
    }

    .bi-envelope {
      margin-right: 5px;
    }
  </style>
</head>

